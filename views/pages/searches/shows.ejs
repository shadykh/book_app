<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shows</title>
</head>
<body>
    <h1>Shows</h1>
    <% allBooks.forEach((book, idx)=>{ %> 
        <div>
            <img src="<%= book.imageLinks %>" alt="">
            <h3><%= book.title %></h3>
            <h4><%= book.authors %></h4>
            <p><%= book.description %></p>
            <form action="/books/<%= idx %>" method="POST">
                <button>Select this book</button>
            </form>
        </div>
    <% }) %> 
</body>
</html>